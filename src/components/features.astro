---
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon";

const drinks = ["Mint Mojito", "Watermelon Lemon Spritzer", "Margarita"]

const cocktailHour = ["Mini Crab Cakes with Spicy Mayo", "Grilled Chicken Skewer with Garlic Chili Dipping", "Meatballs in Spicy Tomato Sauce", "Burrata Cheese, Baby Arugula, Pickled Red Onions, Fig Glaze (VEG)", "Mini BBQ Pulled Pork Tacos, Pickled Red Onion, Tequila Lime Creama"]

const cocktailStations = [
  {
    title: "Mediterranean Tapas Bar",
    description: "Roasted peppers, Feta Cheese, Artichoke Hearts, Olive Hummus, Garlic Hummus, Israeli Salad, Tabbouleh Salad, Pickled Red Onions, Assorted Olives, Bleu Cheese Stuffed Olives and Fresh Pita"
  },
  {
    title: "Italian Station",
    description: "Chicken, Shrimp, Broccoli Rabe — Vodka Sauce, Francaise Sauce, Marinara Sauce — Cheese Ravioli Pasta, Linguine Pasta,Cavatelli Pasta"
  }
  
]

const dinnerMenu = [
  {
    title: "Plated duet salad",
    description: "Hearts Of Romaine Salad and Caprese Salad"
  },
  {
    title: "Pan Seared Almond Encrusted Chicken",
    description: "Baby Arugula & Fresh Tomato, Almond Cream Sauce Bistro Sliced Steak with Garlic and Lemon Basil Pan Sauce (MR) Crispy Salmon with Dill Lemon Sauce"
  },
  {
    title: "Bistro Sliced Steak",
    description: "Garlic and Lemon Basil Pan Sauce (MR)"
  },
  {
    title: "Crispy Salmon",
    description: "Dill Lemon Sauce"
  },
]

const sides = ["Oven Roasted Garlic, Eggplant, Yellow Squash, Zucchini", "Garlic Mashed Potatoes"]

const dessert = [
  {
    title: "Cannoli Station",
    description: "Assorted Cannoli Creams (Chocolate and Orange-Ricotta Cream)Toppings- M&M, Rainbow Sprinkles, Reese’s Pieces, Crushed Pistachio, Semi-Sweet Chocolate Chips, Royal Icing, Chocolate sauce"
  }
]

---

<ContentSection title="Features" id="features">
  <h2>Signature cocktails</h2>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      drinks.map((title) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset lowercase">
          <p class="text-xl font-extrabold">{title}</p>
        </li>
      ))
    }
  </ul>
  <h2>Cocktail hour</h2>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      cocktailHour.map((title) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset lowercase">
          <p class="text-lg font-semibold">{title}</p>
        </li>
      ))
    }
  </ul>
  <h2>Cocktail hour stations</h2>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2">
    {
      cocktailStations.map(({ title, description }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset lowercase">
          <p class="text-xl font-extrabold">{title}</p>
          <p class="text-sm text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
  <h2>Dinner</h2>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2">
    {
      dinnerMenu.map(({ title, description }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset lowercase">
          <p class="text-xl font-extrabold">{title}</p>
          <p class="text-sm text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
  <h2>Sides</h2>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2">
    {
      sides.map((title) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset lowercase">
          <p class="text-xl font-extrabold">{title}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
